<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="VeciHelpAPK.Views.Principal"
             xmlns:local="clr-namespace:VeciHelpAPK.Models"
             BackgroundColor="#242525">
    
    

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20,20,20,10">

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Label Text="Veci" TextColor="White" FontSize="40" Margin="0"/>
                    <Label Text="Help" TextColor="#1d83d4" FontSize="40" Margin="0"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Padding="10">

                    <StackLayout  Orientation="Vertical" HorizontalOptions="StartAndExpand">
                        <Button x:Name="ButtonAdministrador" 
                        ImageSource="adm.png"
                        BackgroundColor="#242525"
                        Clicked="ButtonAdministrador_Clicked"/>
                        <Label x:Name="lblAdministrador" Text="Administrador" TextColor="White"/>
                    </StackLayout>

                    <StackLayout Orientation="Vertical" HorizontalOptions="EndAndExpand">
                        <Button x:Name="ButtonAlertas" 
                        ImageSource="alert.png"
                        BackgroundColor="#242525"
                        Clicked="ButtonAlertas_Clicked"/>
                        <Label Text="Alertas en Curso" TextColor="White" />
                    </StackLayout>

                </StackLayout>
                <StackLayout x:Name="imagenDinamica">
                </StackLayout>

                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="20">
                    <!--<Label Text="VeciHelp" FontSize="Large" TextColor="White" FontAttributes="Bold"/>-->
                </StackLayout>
                


                <StackLayout>
                    <StackLayout Orientation="Vertical"
                         Padding="30,40,30,50"
                         VerticalOptions="End"
                         >

                        <Button x:Name="ButtonSOSRobo"
                        BackgroundColor="#d92027"
                        TextColor="GhostWhite"
                        Text="SOS ROBO"
                        CornerRadius="20"
                        HeightRequest = "80"
                        FontSize="20"
                        FontAttributes="Bold"
                            Clicked="ButtonSOSRobo_Clicked"
                        />

                        <Button x:Name="ButtonAyuda"
                        BackgroundColor="#ffcd3c"
                        CornerRadius="20"
                        Text="EMERGENCIA"
                        FontSize="20"
                        HeightRequest = "80"
                        TextColor="White"
                        FontAttributes="Bold"
                            Clicked="ButtonAyuda_Clicked"
                            />

                        <Button x:Name="ButtonSospecha"
                        HeightRequest = "80"
                        Text="SOSPECHA"
                        BackgroundColor="#2FBB62"
                        CornerRadius="20"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold"
                            Clicked="ButtonSospecha_Clicked"
                            />

                       
                    </StackLayout>
                </StackLayout>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>